<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Glarbo - Leaderboard</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <div class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/">GLARBO</a>
            </div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/leaderboard" class="active">Leaderboard</a></li>
            </ul>
        </div>
    </div>

    <div class="trivia-container">
        <fieldset>
            <legend>Top Players</legend>
            <table>
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Correct</th>
                        <th>Answered</th>
                    </tr>
                </thead>
                <tbody>
                    <% scores.forEach(s => { %>
                        <tr>
                        <td><%= s.username %></td>
                        <td><%= s.correct %></td>
                        <td><%= s.answered %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </fieldset>
    </div>
</body>
</html>